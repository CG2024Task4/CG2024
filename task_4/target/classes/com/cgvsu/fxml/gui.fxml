            </MenuItem>
        </Menu>
        <Menu mnemonicParsing="false" text="Model">
            <MenuItem mnemonicParsing="false" onAction="#chooseModel" text="Choose the model">
            </MenuItem>
            <MenuItem mnemonicParsing="false" onAction="#DeleteModel" text="Delete the model">
            </MenuItem>
        </Menu>
